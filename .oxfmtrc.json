{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "useTabs": false,
  "tabWidth": 2,
  "endOfLine": "lf",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "semi": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.min.js",
    "pnpm-lock.yaml"
  ]
}
